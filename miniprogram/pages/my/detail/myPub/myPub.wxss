.job-list {
  min-height: 50rpx;
  padding: 20rpx;
  transition: all 1s linear;
  border-bottom: 1rpx solid #eaeaea;
}
.job-list-doc {
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.icon {
  justify-self: end;
}
.item-right {
  justify-self: start;
  margin-left: 30rpx;
}
.title {
  font-size: 30rpx;
}
.date {
  font-size: 26rpx;
  color: #888;
}
.job-list-item {
  display: grid;
  grid-template-columns: 90% 10%;
}
.right-btn{
  margin-left: auto;
  padding: 3px 10px;
  border-radius: 24rpx;
  border: 1rpx solid #1677FF;
  font-size: 24rpx;
  color: #1677FF;
}